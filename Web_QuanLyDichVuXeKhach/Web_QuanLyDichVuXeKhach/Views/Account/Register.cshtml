@model Web_QuanLyDichVuXeKhach.ViewModel.RegisterVM

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Register</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div class=" row">
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.Username)
            @Html.TextBoxFor(temp => temp.Username, new { placeholder = "Username", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Username)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.Email)
            @Html.TextBoxFor(temp => temp.Email, new { placeholder = "Email", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Email)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.Password)
            @Html.PasswordFor(temp => temp.Password, new { placeholder = "Password", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Password)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.ConfirmPassword)
            @Html.PasswordFor(temp => temp.ConfirmPassword, new { placeholder = "ComfirmPassword", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.ConfirmPassword)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.NgaySinh)
            @Html.TextBoxFor(temp => temp.NgaySinh, new { placeholder = "Ngày sinh", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.NgaySinh)
        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.DiaChi)
            @Html.TextBoxFor(temp => temp.DiaChi, new { placeholder = "Địa chỉ", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.DiaChi)
        </div>
    </div>
    <button type="submit" class="btn btn-outline-primary">Đăng ký</button>
}

