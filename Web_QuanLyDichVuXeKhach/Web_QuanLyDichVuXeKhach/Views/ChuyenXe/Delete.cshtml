@model Web_QuanLyDichVuXeKhach.Models.ChuyenXe

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Delete</h2>

<form action="/chuyenxe/delete/@Model.MaCX" method="post">
    <input type="hidden" name="MaCX" value="@Model.MaCX" />
    <table class="table">
        <tr>
            <td><img src="~/Image/@Model.ImageUrl" style="height:220px;width:400px;" alt="@Model.DiemDen" /></td>
        </tr>
        <tr>
            <th>Điểm đi</th>
            <td>@Model.DiemDi</td>
        </tr>
        <tr>
            <th>Điểm đến</th>
            <td>@Model.DiemDen</td>
        </tr>
        <tr>
            <th>Ngày đi</th>
            <td>@Model.NgayDi</td>
        </tr>
        <tr>
            <th>Giá vé</th>
            <td>@Model.GiaVe</td>
        </tr>
    </table>
    <button type="submit" class="btn btn-outline-danger">Delete</button>
    <a href="/ChuyenXe/index" class="btn btn-outline-primary">Cancel</a>
</form>