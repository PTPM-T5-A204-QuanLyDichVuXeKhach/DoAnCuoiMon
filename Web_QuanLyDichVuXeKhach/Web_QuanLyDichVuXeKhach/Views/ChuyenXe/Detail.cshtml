@model Web_QuanLyDichVuXeKhach.Models.ChuyenXe

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="row">
    <div class="col-4">
        <img src="~/image/@Model.ImageUrl" alt="@Model.ImageUrl" style="height:280px; width:400px;" />
    </div>
    <div class="col-6">
        <h3>Điểm đi: @Model.DiemDi</h3>
        <h3>Điểm đến: @Model.DiemDen</h3>
        <h5>Mã CX: @Model.MaCX</h5>
        <h5 style="color:red">Giá: @Model.GiaVe</h5>
        <h5>Ngày đi: @Model.NgayDi</h5>
        <form class="d-flex" action="/chuyenxe/xetrongchuyen">
            <button class="btn btn-outline-primary" type="submit">Mua</button>
        </form>
    </div>
</div>
<br />
<a href="@Url.Action("Index","ChuyenXe")">Trở về trang trước</a>
